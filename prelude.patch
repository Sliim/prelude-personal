 .gitignore             |    5 +++++
 core/prelude-editor.el |    2 +-
 modules/prelude-c.el   |    2 +-
 3 files changed, 7 insertions(+), 2 deletions(-)

diff --git a/.gitignore b/.gitignore
index d19d89f..92412fe 100644
--- a/.gitignore
+++ b/.gitignore
@@ -1,5 +1,10 @@
 *~
 *.elc
+/dvc
+/personal
+/php-manual
+/emms
+/ac-comphist.dat
 auto-save-list
 recentf
 savehist
diff --git a/core/prelude-editor.el b/core/prelude-editor.el
index 8e54be4..b644755 100644
--- a/core/prelude-editor.el
+++ b/core/prelude-editor.el
@@ -137,7 +137,7 @@
 
 ;; use shift + arrow keys to switch between visible buffers
 (require 'windmove)
-(windmove-default-keybindings)
+(windmove-default-keybindings 'meta)
 
 ;; automatically save buffers associated with files on buffer switch
 ;; and on windows switch
diff --git a/modules/prelude-c.el b/modules/prelude-c.el
index e92fca7..1b1a25a 100644
--- a/modules/prelude-c.el
+++ b/modules/prelude-c.el
@@ -35,7 +35,7 @@
 (require 'prelude-programming)
 
 (defun prelude-c-mode-common-defaults ()
-  (setq indent-tabs-mode t)
+  (setq indent-tabs-mode nil)
   (setq c-basic-offset 4))
 
 (setq prelude-c-mode-common-hook 'prelude-c-mode-common-defaults)
